<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="navbar-inner">
    <div class="container">
      <nav>
        <ul class="nav pull-right">
          <li><%= link_to "Home", root_path(subdomain: @site.subdomain, site_id: @site.id) %></li>
          <% if user_signed_in? %>
            <li><%= link_to "Users", users_path(site_id: @site.id) %></li>
            <li><%= link_to "Microposts", microposts_path(site_id: @site.id) %></li>
            <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Account <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Profile", user_path(site_id: @site.id, id: current_user.id) %></li>
                <li><%= link_to "Settings", edit_user_path(site_id: @site.id, id: current_user.id) %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to "Sign out", signout_path(site_id: @site.id), method: "delete" %>
                </li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to "Sign in", signin_path(site_id: @site.id) %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>